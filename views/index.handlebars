<div class="container">

  <div class="jumbotron text-danger bg-warning">
    <h1 class="display-4 font-weight-bold text-center">Hawaiian Burger!</h1>
  
    

  </div>
  <div class="card bg-light mb-3">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h1 class="text-danger">Ready!</h1>

          {{#each burgers}}
          {{#unless devoured}}

          <div>
            <form action="/burgers/{{id}}?_method=PUT" method="POST">
              <h2 class="text-warning">{{burger_name}} <button type="submit" class="badge badge-secondary">Devour
                  it!</button></h2>
            </form>
          </div>
          {{/unless}}
          {{/each}}
        </div>

        <div class="col-md-6">
          <h1 class="text-danger">Devoured!</h1>
          {{#each burgers}}
          {{#if devoured}}
          <div>
            <h2 class="text-warning">
              {{this.burger_name}}
            </h2>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>
      <form action="/burgers" method="POST">

        <div class="form-group">
          <h2 class="text-danger"> Order a Burger</h2>
          <input class="form-control" type="text" id="name" name="burger_name">
        </div>

        <button type="submit" class="btn btn-danger">Place Order</button>
      </form>



    </div>